			<div class="bannercontainer">
			<div class="banner ">
				<ul>   
                    @{
                        var cnt =0;
                        foreach(var fc in ViewBag.featured)
                        {
                            cnt++;
                            foreach(var f in fc.FeaturedContentDatas)
                            {
                             @Html.Raw("<li class=\"slide1\" data-transition=\"boxslide\" data-slotamount=\"1\">"+
