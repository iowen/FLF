		<!-- Sub Header -->
		
		<!-- begin Intro -->


		<!-- begin new classes -->
		<article class="article-container">
			<div class="container" >
				<div class="row" >
					<div class="col-md-12">

					<h2 class="article-title" >Featured Classes</h2>
					<span class="line" >
						<span class="sub-line" ></span>
					</span>
					<a class="slider-control pull-right next" href="#new-classes" data-slide="next"></a>
					<a class="slider-control pull-right prev" href="#new-classes" data-slide="prev"></a>
					<a class="button-gym normal-button view-all pull-right" href="@Request.Url.GetLeftPart(UriPartial.Authority)/Classes" >view all</a>
					</div>
				</div>

				<div class="row">
					<div class="new-classes" >
					<div id="new-classes" class="carousel slide">
					<!-- Wrapper for slides -->
					<div class="carousel-inner">
						<div class="item active">
                            @foreach(var cl in ViewBag.classes)
                            {
							<div class="col-sm-6 col-md-3" >
								<div class="new-class" >
									<img src="@cl.Photo.Location" alt="//" width="263" height="197"/>
									<div class="class-title" > 
										<div class="occult" ><a href="@Request.Url.GetLeftPart(UriPartial.Authority)/Classes/ViewClass?id=@cl.ClassId" class="link" ></a></div>
										<h3>@cl.Name</h3>
									</div>
								</div>
							</div>
                            }
						
						</div>
					</div>
					</div>

					</div>

				</div>
			</div>
		</article>
